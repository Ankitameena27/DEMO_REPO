pipeline {
    agent any

    environment {
        CREDENTIALS = credentials('git_paswrd')
    }
    
    parameters {
        string(name: 'FOLDER_NAME', defaultValue: 'NULL', description: 'Enter folder name you want to delete')
    }

    stages {
        stage('git_checkout') {
            steps {
                script {
                    // Assuming you want to checkout the 'main' branch
                    git branch: 'main', credentialsId: 'git_paswrd', url: 'https://github.com/Ankitameena27/swati.git'
                }
            }
        }

        stage('run_shell_script') {
            steps {
                script {
                    // Give execute permissions to the script
                    sh 'chmod +x script_delete_git_folder'
                    
                    // Execute the script
                    sh "./script_delete_git_folder.sh ${params.FOLDER_NAME}" 
                }
            }
        }
    }
}

