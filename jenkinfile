pipeline {
    agent any

    environment {
        CREDENTIALS = credentials('demo_user_password')
    }

    stages {
        stage('demo') {
            steps {
                script {
                    // Give execute permissions to the script
                    sh 'chmod +x print_user_name.sh'
                    
                    // Execute the script
                    sh './print_user_name.sh'
                }
            }
        }
    }
}
